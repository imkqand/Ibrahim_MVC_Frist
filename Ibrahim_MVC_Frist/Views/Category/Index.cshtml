@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<partial name="_NotificationPartial"/>



<div class="text-end">
    <a asp-action="create" class="btn btn-primary mb-3">Create New</a>
</div>
<div class="bg-white">
    <table class="table table-bordered table-striped mb-3">

        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>

            }


        </tbody>



    </table>

</div>
