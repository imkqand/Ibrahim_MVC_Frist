@model Employee
@{
    ViewData["Title"] = "create";
}

<h1>create</h1>

<form asp-action="create" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>


    <div>
        <label>Emolyee Name</label>
        <input asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div>
        <label>Emolyee Phone</label>
        <textarea asp-for="Phone" name="Phone" class="form-control mb-3"></textarea>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div>
        <label>Emolyee User</label>
        <input asp-for="UserName" name="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>

    </div>
    <div>
        <label>Emolyee Password</label>
        <input asp-for="Password" name="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <div>
        <label>Emolyee Lock</label>
        <input asp-for="Islock" type="checkbox" name="Islock" class="form-check" />
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>


    <button type="submit" class="btn btn-primary">Save</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}